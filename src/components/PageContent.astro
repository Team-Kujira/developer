---
import type { CollectionEntry } from "astro:content";
type Props = CollectionEntry<"docs">["data"];

const { ...data } = Astro.props;
---

<article>
  <div class="mb-8">
    <h1 class="text-4xl mb-1">{data.title}</h1>
    <h2 class="text-xl leading-tight mt-1 text-kujira-gray">{data.description}</h2>
  </div>
  <slot />
</article>

<style is:global>
  article h1 {
    @apply text-3xl;
  }

  article h2 {
    @apply text-2xl;
  }

  article h3 {
    @apply text-xl;
  }

  article h4 {
    @apply text-lg;
  }

  article h1,
  article h2,
  article h3,
  article h4,
  article h5,
  article h6 {
    @apply mt-8 mb-2;
  }

  article p {
    @apply my-3 leading-tight md:leading-normal;
  }

  article a {
    @apply underline underline-offset-4 hover:decoration-2 decoration-kujira-teal font-semibold transition-all;
  }

  article ol {
    @apply list-decimal pl-10;
  }

  article ul {
    @apply list-disc pl-10;
  }

  article pre.astro-code {
    @apply p-3 my-2 overflow-auto border border-kujira-border rounded-lg;
  }

  article code * {
    @apply text-sm;
  }

  article :not(pre) > code {
    @apply rounded px-1;
  }

  article table {
    @apply table-fixed w-full rounded-lg;
  }

  article thead {
    @apply text-left border-b-2 border-zinc-300 dark:border-zinc-700 bg-zinc-200 dark:bg-zinc-800;
  }
  article thead th {
    @apply p-2;
  }

  article tbody td {
    @apply p-2 break-words;
  }
  article tbody tr:nth-child(even) {
    @apply bg-zinc-200 dark:bg-zinc-800;
  }
</style>
